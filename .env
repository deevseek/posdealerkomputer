# =============================================
# LaptopPOS Environment Configuration
# Copy this file to .env and update values
# =============================================

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://laptoppos:Kmzwa8awa%40@localhost:5432/laptoppos
PGHOST=localhost
PGPORT=5432
PGDATABASE=laptoppos
PGUSER=laptoppos
PGPASSWORD=Kmzwa8awa@

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=change-this-to-a-secure-random-string-min-32-chars

# Base URL (penting untuk link WhatsApp & frontend)
APP_URL=https://profesionalservis.my.id
# Atau bisa juga:
# PUBLIC_URL=https://profesionalservis.my.id
# DOMAIN_NAME=profesionalservis.my.id

# Security Configuration
BCRYPT_ROUNDS=12

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@laptoppos.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@laptoppos.com

# WhatsApp Integration
WHATSAPP_SESSION_PATH=./whatsapp_session

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# Development Configuration
DEBUG_MODE=false
ENABLE_CORS=true
CORS_ORIGIN=https://profesionalservis.my.id

# Performance Configuration
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Cache Configuration (Optional - Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Report Configuration
REPORT_TEMP_PATH=./temp/reports
PDF_ENGINE=puppeteer

# Frontend Configuration
VITE_API_URL=https://profesionalservis.my.id
