# =============================================
# LaptopPOS Environment Configuration
# Copy this file to .env and update values
# =============================================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/laptoppos
PGHOST=localhost
PGPORT=5432
PGDATABASE=laptoppos
PGUSER=postgres
PGPASSWORD=your_password_here

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your-very-secure-session-secret-key-change-this

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@laptoppos.com

# WhatsApp Integration (Optional)
WHATSAPP_SESSION_PATH=./whatsapp_session

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# Development Configuration (set to false in production)
DEBUG_MODE=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5000

# Performance Configuration
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Cache Configuration (Optional - Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Report Configuration
REPORT_TEMP_PATH=./temp/reports
PDF_ENGINE=puppeteer

# Frontend Configuration (if serving separately)
VITE_API_URL=http://localhost:5000